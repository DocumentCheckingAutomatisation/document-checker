{
  "common_rules": {
    "font": "Times New Roman",
    "font_size": 14,
    "line_spacing": 1.5,
    "paragraph_indent": 1.25,
    "margins": {
      "top": 20,
      "bottom": 20,
      "left": 30,
      "right": 10
    },
    "alignment": {
      "text": "justified",
      "page_numbers": "center"
    }
  },
  "structure_rules": {
    "required_chapters": [
      "Титульный лист",
      "Содержание",
      "Введение",
      "1",
      "2",
      "Заключение",
      "Список использованных источников",
      "Приложение"
    ],
    "required_sections": {
      "1": ["1.1","Выводы по главе"],
      "2": ["2.1","Выводы по главе"]
    },
    "introduction_keywords": [
      "актуальность",
      "объект исследования",
      "предмет исследования",
      "цель работы",
      "задачи",
      "научная новизна",
      "практическая значимость"
    ],
    "numbering": {
      "unnumbered_chapters": [
        "Введение",
        "Содержание",
        "Заключение",
        "Список использованных источников",
        "Приложение"
      ],
      "numbered_chapters": [
        "1",
        "2"
      ],
      "chapter_numbering": {
        "numbering": true,
        "uppercase": true,
        "bold": true,
        "no_trailing_dot": true,
        "numbering_style": "arabic",
        "level": 1
      },
      "section_numbering": {
        "numbering": true,
        "uppercase": false,
        "bold": true,
        "no_trailing_dot": true,
        "numbering_style": "arabic",
        "level": 2
      },
      "subsection_numbering": {
        "numbering": false,
        "uppercase": false,
        "bold": "true",
        "no_trailing_dot": true,
        "numbering_style": "arabic",
        "level": 3
      }
    }
  },
  "design_rules": {
    "title":{
      "doc_type": "Курсовая работа"
    },
    "chapter": {
      "font_size": 14,
      "bold": true,
      "italic": false,
      "underline": false,
      "alignment": "center"
    },
    "section": {
      "font_size": 14,
      "bold": true,
      "italic": false,
      "underline": false,
      "alignment": "left"
    },
    "subsection": {
      "font_size": 14,
      "bold": false,
      "italic": true,
      "underline": false,
      "alignment": "left"
    },
    "text": {
      "bold": false,
      "italic": false,
      "underline": false,
      "alignment": "justified"
    },
    "list": {
      "numbered": {
        "symbol": ["number", "letter"],
        "sign": ")"
      },
      "bulleted": "-",
      "item_endings": {
        "default": ";",
        "last": "."
      }
    },
    "table": {
      "alignment": "center",
      "number_caption": {
        "alignment": "right",
        "format": "Таблица %N"
      },
      "title_caption": {
        "alignment": "center",
        "format": "%T"
      },
      "references": ["(табл.", "(см. табл.", "в таблиц"]
    },
    "picture": {
      "alignment": "center",
      "caption": {
        "alignment": "center",
        "format": "Рисунок %N - %T"
      },
      "references": ["(рис.", "(см. рис.", "на рисунк"]
    },
    "quotes": {
      "primary": ["«", "»", "\\u00ab", "\\u00bb"],
      "secondary": ["„", "“"]
    },
    "citations": {
      "format": "[%N]"
    }
  }
}