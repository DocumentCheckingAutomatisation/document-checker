{
  "common_rules": {
    "font": "Times New Roman",
    "font_size": 14,
    "line_spacing": 1.5,
    "paragraph_indent": 1.25,
    "margins": {
      "top": 20,
      "bottom": 20,
      "left": 30,
      "right": 10
    },
    "alignment": {
      "text": "justified",
      "page_numbers": "center"
    }
  },
  "structure_rules": {
    "required_chapters": [
      "титульный лист",
      "содержание",
      "введение",
      "1 глава",
      "2 глава",
      "заключение",
      "список использованных источников",
      "приложения"
    ],
    "required_sections": {
      "1": ["1.1 раздел", "1.2 раздел","выводы по главе"],
      "2": ["2.1 раздел", "2.2 раздел","выводы по главе"]
    },
    "introduction_keywords": [
      "актуальность",
      "объект исследования",
      "предмет исследования",
      "цель исследования",
      "задачи",
      "теоретическая новизна",
      "практическая значимость"
    ],
    "numbering": {
      "unnumbered_chapters": [
        "введение",
        "содержание",
        "заключение",
        "список использованных источников",
        "приложения"
      ],
      "unnumbered_sections": [
        "выводы по главе"
      ]
    }
  },
  "design_rules": {
    "title":{
      "doc_type": "Курсовая работа"
    },
    "chapter": {
      "font_size": "14.0",
      "bold": true,
      "italic": false,
      "underline": false,
      "alignment": "center",
      "uppercase": true,
      "no_trailing_dot": true,
      "numbering_style": "arabic",
      "numbering_level": 1
    },
    "section": {
      "font_size": 14,
      "bold": true,
      "italic": false,
      "underline": false,
      "alignment": "left",
      "uppercase": false,
      "no_trailing_dot": true,
      "numbering_style": "arabic",
      "numbering_level": 1
    },
    "subsection": {
      "font_size": 14,
      "bold": false,
      "italic": true,
      "underline": false,
      "alignment": "left",
      "uppercase": false,
      "no_trailing_dot": true,
      "numbering_style": "arabic",
      "numbering_level": 1,
      "numbering": false
    },
    "text": {
      "bold": false,
      "italic": false,
      "underline": false,
      "alignment": "justified"
    },
    "list": {
      "numbered": {
        "symbol": ["number", "letter"],
        "sign": ")"
      },
      "bulleted": "-",
      "item_endings": {
        "default": ";",
        "last": "."
      }
    },
    "table": {
      "alignment": "center",
      "number_caption": {
        "alignment": "right",
        "format": "Таблица %N"
      },
      "title_caption": {
        "alignment": "center",
        "format": "%T"
      },
      "references": ["(табл.", "(см. табл.", "в таблиц"]
    },
    "picture": {
      "alignment": "center",
      "caption": {
        "alignment": "center",
        "format": "Рисунок %N - %T"
      },
      "references": ["(рис.", "(см. рис.", "на рисунк"]
    },
    "quotes": {
      "primary": ["«", "»", "\\u00ab", "\\u00bb"],
      "secondary": ["„", "“"]
    },
    "citations": {
      "format": "[%N]"
    }
  }
}